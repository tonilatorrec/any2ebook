{
  "manifest_version": 2,
  "name": "tiny capture",
  "version": "0.1.0",
  "description": "Save current tab URL to extension storage (AKU-style capture queue).",
  "permissions": ["storage", "tabs", "downloads"],
  "browser_action": {
    "default_title": "Save link",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Save current tab URL"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tiny-capture@any2ebook",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
